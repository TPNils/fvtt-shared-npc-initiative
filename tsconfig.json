{
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["DOM", "ES6", "ES2017", "ES2018", "ES2019", "ES2020"],
    "types": ["fvtt-types"],
    "target": "esnext",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowUmdGlobalAccess": true
  },
  "include": [ "src/**/*" ],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "strictNullChecks": false,
      "allowSyntheticDefaultImports": false,
      "skipLibCheck": true
    }
  }
}